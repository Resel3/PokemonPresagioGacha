prob = rand(100)
case prob
#############################################
# Tier 1 con un 41%
#############################################
when (0...41) 
  items = [:POKEBALL, :FULLHEAL]
  result = items[rand(items.length)]
  itemReward(result,1)
#############################################
# Tier 2 con un 30%
#############################################
when (41...71) 
  items = [:GREATBALL, :SUPERPOTION]
  result = items[rand(items.length)]
  itemReward(result,2)
#############################################
# Tier 3 con un 20%
#############################################
when (71...91) 
   result = rand(10)
#############################################
# Tier 4 con un 9%
#############################################
when (91...100) 
   result = rand(10)
end
